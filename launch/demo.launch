<?xml version="1.0"?>

<launch>
  <param name="/use_sim_time" value="false" />

  <arg name="global_frame" value="map" />

  <arg name="map_file" default="$(find astar_planner_ros)/map/maze_5cm/map.yaml" />

  <node pkg="astar_planner_ros" type="astar_planner_ros_test" name="astar_planner_ros_test" output="screen">
    <!-- global_costmap -->
    <rosparam file="$(find astar_planner_ros)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find astar_planner_ros)/params/global_costmap_params.yaml" command="load" />
    <param name="global_costmap/global_frame" value="$(arg global_frame)" />

    <!-- AStarPlannerROS -->
    <rosparam file="$(find astar_planner_ros)/params/astar_planner_ros.yaml" command="load" />
  </node>

  <!-- tf -->
  <node pkg="astar_planner_ros" type="astar_planner_tf_broadcaster" name="astar_planner_tf_broadcaster" output="screen"/>

  <!-- Mapping -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
    <param name="frame_id" value="$(arg global_frame)" />
  </node>

  <!-- Visualization -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find astar_planner_ros)/launch/demo.rviz" />

</launch>
